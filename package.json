{
	"name": "themeswitcher",
	"displayName": "ThemeSwitcher",
	"description": "Swaps theme based on time of day",
	"publisher": "MohnishKalia",
	"icon": "images/moon.png",
	"version": "0.1.2",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Themes"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "themeswitcher.changeDay",
				"title": "ThemeSwitcher: Change Day"
			}
		],
		"configuration": {
			"title": "ThemeSwitcher",
			"properties": {
				"themeswitcher.startDay": {
					"type": "string",
					"default": "7:00",
					"description": "The 24-hour time (HH:MM) you want light theme to start."
				},
				"themeswitcher.endDay": {
					"type": "string",
					"default": "15:00",
					"description": "The 24-hour time (HH:MM) you want dark theme to start."
				},
				"themeswitcher.preferredDarkColorTheme": {
					"type": "string",
					"default": "Default Dark+",
					"description": "The dark theme used at night."
				},
				"themeswitcher.preferredLightColorTheme": {
					"type": "string",
					"default": "Default Light+",
					"description": "The light theme used in day."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/MohnishKalia/ThemeSwitcher"
	}
}
